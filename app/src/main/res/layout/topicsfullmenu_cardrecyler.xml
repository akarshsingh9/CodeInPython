<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topicsCardView"
    card_view:contentPadding="8dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:id="@+id/topicIcon"
            android:src="@drawable/pyth"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A biggerTitle"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/topicCardText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_below="@id/topicCardText"
                android:layout_marginLeft="35dp"
                android:text="1. First item"
                android:id="@+id/firstitem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="35dp"
                android:layout_below="@id/firstitem"

                android:text="2. Second item"
                android:id="@+id/seconditem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="35dp"
                android:text="3. Third item"
                android:layout_below="@id/seconditem"
                android:id="@+id/thirditem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_below="@id/topicCardText"
                android:layout_toRightOf="@id/firstitem"
                android:text="4. four item"
                android:id="@+id/fourthitem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="35dp"
                android:layout_below="@id/fourthitem"
                android:layout_toRightOf="@id/firstitem"
                android:text="5. five item"
                android:id="@+id/fiveitem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/fiveitem"
                android:layout_toRightOf="@id/thirditem"
                android:text="6. sixth item"
                android:id="@+id/sixitem"/>


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>