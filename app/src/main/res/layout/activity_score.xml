<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeinpython.codeinpython.ScoreActivity">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Your Score"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="90dp"
       android:id="@+id/yourscoretext"
       tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="75sp"
        android:id="@+id/totalscore"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yourscoretext"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:textColor="#000000"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Go Back"
        android:textColor="#EEEEEE"
        android:gravity="center"
        android:padding="12dp"
        android:id="@+id/gobackquiz"
        android:background="#689f38"
        tools:ignore="HardcodedText" />
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/3"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="22dp"
        android:id="@+id/totalscoresub"/>-->
</RelativeLayout>


